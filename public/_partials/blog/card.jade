avatar = team[article.author]['avatar']
name = team[article.author]['name']

.card
	.card-header
		a(href="/blog/#{ slug }.html")
			h2= article.title

	.card-body
		p= article.description

	.card-footer
		p.author <img src="#{avatar}"/> by #{name}

		if article.meta
			p.meta <strong>Topics:</strong> #{article.meta.topics}